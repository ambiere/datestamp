{
  "name": "@datestamp",
  "version": "0.0.0",
  "description": "Timestamp Microservice: Simple API for managing time-related operations. Built with Node.js & Express.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src/ src/server.js",
    "docker:compose": "docker-compose -f docker-compose.yml up",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "pretest": "pnpm run lint",
    "test": "tap \"__test__/**/*.test.js\" -- --no-check-coverage",
    "test:coverage": "cross-env NODE_ENV=test tap --coverage-report=html \"__test__/**/*.test.js\" --no-check-coverage",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('husky').install() }\"",
    "version": "cz bump",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "keywords": [
    "microservice",
    "timestamp",
    "date",
    "nodejs",
    "express",
    "freecodeCamp"
  ],
  "author": "zhid0399123 <zhid0399123@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.2.3",
    "tap": "^18.6.1",
    "kolorist": "^1.8.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "rimraf": "^5.0.5"
  }
}
